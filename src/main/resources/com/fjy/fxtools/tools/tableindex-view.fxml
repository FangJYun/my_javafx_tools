<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.fjy.fxtools.controller.tools.TableIndexToolController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
  <GridPane>

  </GridPane>
  <HBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1">
    <Label text="分表键：" /><TextField fx:id="keyTextField" />
  </HBox>
  <HBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1">
    <Label text="分表键算法：" />
    <RadioButton fx:id="hashCode" text="hashCode"/>
  </HBox>
  <HBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1">
    <Label text="分表数量：" /><TextField fx:id="countTextField" />
  </HBox>
  <Label fx:id="resultTable" />
  <Button onAction="#confirmButtonClick" text="确认" />
</VBox>
