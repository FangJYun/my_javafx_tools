<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.fjy.fxtools.controller.tools.TableIndexToolController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
  <GridPane hgap="10" vgap="10" alignment="center">
    <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <columnConstraints>
      <ColumnConstraints hgrow="NEVER" minWidth="100" />
      <ColumnConstraints hgrow="ALWAYS" minWidth="100" />
    </columnConstraints>
    <!--第一行 -->
    <Label text="分表键：" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="keyTextField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <!--第二行 -->
    <Label text="分表键算法：" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <RadioButton fx:id="hashCode" text="hashCode"  GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <!--第三行 -->
    <Label text="分表数量：" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="countTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
  </GridPane>
  <Label fx:id="resultTable" />
  <Button onAction="#confirmButtonClick" text="确认" />
</VBox>
